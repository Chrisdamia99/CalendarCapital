<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentView"
    android:background="@drawable/back"

    android:layout_width="match_parent"
    android:layout_height="match_parent">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
                android:orientation="vertical"
            android:padding="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintVertical_bias="0.25">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/cellDayText"
            android:text="1"
            android:background="@drawable/back"

            android:padding="5dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/blakcgray"

            />
                <LinearLayout
                    android:id="@+id/eventsForBlock"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                        android:orientation="vertical">

        <TextView
            android:id="@+id/eventDayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:text="Event"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cellDayText"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/eventDayText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Event"
            android:gravity="center"

            android:layout_marginTop="3dp"
                android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/eventDayText"
            app:layout_constraintVertical_bias="0.0" />

                        <TextView
                            android:id="@+id/eventDayText3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Event"
                            android:gravity="center"

                            android:layout_marginTop="3dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:textStyle="bold"

                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/eventDayText"
                            app:layout_constraintVertical_bias="0.0" />
                        <TextView
                            android:id="@+id/eventRepeatText1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:gravity="center"
                            android:layout_marginTop="3dp"
                            android:text="Event"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="10sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/cellDayText"
                            app:layout_constraintVertical_bias="0.0" />

                        <TextView
                            android:id="@+id/eventRepeatText2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Event"
                            android:gravity="center"

                            android:layout_marginTop="3dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:textStyle="bold"

                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/eventDayText"
                            app:layout_constraintVertical_bias="0.0" />

                        <TextView
                            android:id="@+id/eventRepeatText3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Event"
                            android:gravity="center"

                            android:layout_marginTop="3dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:textStyle="bold"

                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/eventDayText"
                            app:layout_constraintVertical_bias="0.0" />

                </LinearLayout>

        </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>